<div class="container">
    <div class="row">
        <% data.forEach(item => { %>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <div class="jumbotron shadow p-3 mb-5 bg-white rounded mt-5 mb-3">
                    <h5 class="mb-2 font-weight-light"><%- item.caption %></h5>
                    <% let showImg = `<img src="/-/assets/images/${item.id}.jpg"/>` %>
                    <%- showImg %>
                    <i class="mt-3 fas fa-heart" style="color: red;"> <span class="" style="color: #000;"><%- rand = Math.floor(Math.random() * 100) %></span></i>
                    <hr />
                    <h6>John Doe. <span style="font-weight: 200; font-size: 0.85em;">hi pikkanode..</span></h6>
                    <p class="text-left"><small><%- item.created_at %></small></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>